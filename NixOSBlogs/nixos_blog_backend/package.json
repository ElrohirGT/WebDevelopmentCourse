{
  "name": "nixos_blog_backend",
  "version": "1.0.0",
  "description": "NixOS Blog Backend in Express",
  "main": "index.js",
  "author": "ElrohirGT",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "yarn && nodemon ./index.js",
    "start": "yarn && node ./index.js",
    "release": "cd ../nixos_blog_frontend/ && yarn build && cp -r dist ../nixos_blog_backend/static/ && cd ../nixos_blog_backend && yarn start",

    "lint": "oxlint -D all -A nursery",
    "lint:ci": "yarn lint --max-warnings 0",
    "format": "dprint fmt"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
